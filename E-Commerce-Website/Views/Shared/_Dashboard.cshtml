<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Admin Dashboard" />
    <meta name="author" content="" />
    <title>Admin Dashboard</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Bootstrap CSS (SB Admin uses bootstrap.bundle.min.js + local styles.css) -->
    <link href="~/css/styles.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="sb-nav-fixed">
    <!-- Top Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "Admin")">
            <i class="fas fa-store me-1"></i>E-Commerce Admin
        </a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="@Url.Action("Profile", "Admin")">Profile</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="@Url.Action("Logout", "Admin")">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" href="@Url.Action("Index", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div> Dashboard
                        </a>
                        <a class="nav-link" href="@Url.Action("Profile", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div> Profile
                        </a>
                        <a class="nav-link" href="@Url.Action("FetchCustomer", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div> Customers
                        </a>
                        <a class="nav-link" href="@Url.Action("FetchCategory", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-list"></i></div> Categories
                        </a>
                        <a class="nav-link" href="@Url.Action("FetchProduct", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-boxes"></i></div> Products
                        </a>
                        <a class="nav-link disabled" href="#" aria-disabled="true">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div> Cart <small>(soon)</small>
                        </a>
                        <a class="nav-link disabled" href="#" aria-disabled="true">
                            <div class="sb-nav-link-icon"><i class="fas fa-receipt"></i></div> Orders <small>(soon)</small>
                        </a>
                        <a class="nav-link" href="@Url.Action("FetchFeedback", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-comment-dots"></i></div> Feedback
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div>Logged in as Admin</div>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">@ViewData["Title"]</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                    <div class="card">
                        <div class="card-body">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="text-center small">
                        &copy; @DateTime.Now.Year — E-Commerce Admin Dashboard
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Required JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>

    <!-- jQuery + Validation (only if you use asp-for/ModelState in admin forms) -->
    @if (IsSectionDefined("Scripts"))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    }

    <!-- TempData Toasts (optional but recommended) -->
    @if (TempData["Success"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const alert = `<div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>`;
                document.querySelector('main').insertAdjacentHTML('afterbegin', alert);
            });
        </script>
    }
</body>
</html>