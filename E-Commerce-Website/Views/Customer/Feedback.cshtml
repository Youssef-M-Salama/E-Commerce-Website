@model E_Commerce_Website.Models.Feedback

@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">We value your feedback!</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Message"]
    </div>
}

<form asp-action="Feedback" method="post">
    <div class="form-group mb-3">
        <label>User Name</label>
        <input asp-for="UserName"
               class="form-control"
               placeholder="Enter your name"
               required />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Your Message</label>
        <textarea asp-for="UserMessage"
                  class="form-control"
                  rows="4"
                  placeholder="Write your message here..."
                  required></textarea>
        <span asp-validation-for="UserMessage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Send Feedback
    </button>
</form>

<!-- Back to Home button -->
<div class="mt-3 text-center">
    <a asp-controller="Customer" asp-action="Index" class="btn btn-warning">
        Back to Home
    </a>
</div>


