@model List<E_Commerce_Website.Models.Cart>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal subtotal = Model?.Sum(i => i.Product?.ProductPrice * i.ProductQuantity ?? 0) ?? 0;
    decimal total = subtotal;
}

<main class="main">
    <div class="page-header text-center" style="background-image: url('/website/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Shopping Cart<span>Shop</span></h1>
        </div>
    </div>

    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Customer")">Home</a>
                </li>
                <li class="breadcrumb-item active">Shopping Cart</li>
            </ol>
        </div>
    </nav>

    <div class="page-content">
        <div class="cart">
            <div class="container">
                <div class="row">

                    <!-- CART ITEMS -->
                    <div class="col-lg-9">
                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-cart table-mobile">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        decimal lineTotal = item.Product.ProductPrice * item.ProductQuantity;

                                        <tr>
                                            <td class="product-col">
                                                <div class="product">
                                                    <figure class="product-media">
                                                        <img src="@item.Product.ProductImage"
                                                             alt="@item.Product.ProductName"
                                                             class="product-image" />
                                                    </figure>

                                                    <h3 class="product-title">
                                                        @item.Product.ProductName
                                                    </h3>
                                                </div>
                                            </td>

                                            <td class="price-col">
                                                $@item.Product.ProductPrice.ToString("N2")
                                            </td>

                                            <td class="quantity-col">
                                                <input type="number"
                                                       class="form-control"
                                                       value="@item.ProductQuantity"
                                                       min="1"
                                                       max="99"
                                                       data-cart-id="@item.CartId"
                                                       onchange="updateQuantity(this)" />
                                            </td>

                                            <td class="total-col">
                                                $@lineTotal.ToString("N2")
                                            </td>

                                            <td class="remove-col">
                                                <form asp-action="RemoveFromCart" method="post">
                                                    <input type="hidden" name="cartId" value="@item.CartId" />
                                                    <button type="submit" class="btn-remove">
                                                        <i class="icon-close"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="cart-bottom">
                                <a href="@Url.Action("Index", "Customer")"
                                   class="btn btn-outline-dark-2">
                                    CONTINUE SHOPPING
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <h4>Your shopping cart is empty.</h4>
                                <a href="@Url.Action("Index", "Customer")"
                                   class="btn btn-outline-primary mt-3">
                                    Continue Shopping
                                </a>
                            </div>
                        }
                    </div>

                    <!-- CART SUMMARY -->
                    @if (Model != null && Model.Any())
                    {
                        <aside class="col-lg-3">
                            <div class="summary summary-cart">
                                <h3 class="summary-title">Cart Total</h3>

                                <table class="table table-summary">
                                    <tbody>
                                        <tr>
                                            <td>Subtotal:</td>
                                            <td>$@subtotal.ToString("N2")</td>
                                        </tr>

                                        <tr class="summary-total">
                                            <td>Total:</td>
                                            <td>$@total.ToString("N2")</td>
                                        </tr>
                                    </tbody>
                                </table>

                                <a href="#"
                                   class="btn btn-outline-primary-2 btn-order btn-block">
                                    PROCEED TO CHECKOUT
                                </a>
                            </div>
                        </aside>
                    }

                </div>
            </div>
        </div>
    </div>
</main>

<script>
    function updateQuantity(input) {
        const cartId = input.dataset.cartId;
        const quantity = parseInt(input.value);

        if (isNaN(quantity) || quantity < 1) return;

        $.post('@Url.Action("UpdateCartItem", "Customer")', {
            cartId: cartId,
            quantity: quantity
        }).done(function () {
            location.reload();
        });
    }
</script>
