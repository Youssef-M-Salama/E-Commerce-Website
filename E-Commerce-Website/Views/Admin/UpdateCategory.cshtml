@model Category
@{
    ViewData["Title"] = "Edit Category";
     Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase">Edit Category</h2>
</div>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="UpdateCategory" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CategoryId" />
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Update Category</button>
            <a asp-action="FetchCategory" class="btn btn-outline-secondary mt-2 w-100">Cancel</a>
        </form>
    </div>
</div>