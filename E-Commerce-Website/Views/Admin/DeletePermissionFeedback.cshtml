@model Feedback
@{
    ViewData["Title"] = "Delete Feedback?";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger">⚠️ Confirm Feedback Deletion</h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 alert alert-info">
        <h5 class="text-center">Delete this feedback?</h5>

        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>ID:</strong> @Model.FeedbackId</li>
            <li class="list-group-item"><strong>User:</strong> @Model.UserName</li>
            <li class="list-group-item"><strong>Message:</strong> @Model.UserMessage</li>
        </ul>

        <form asp-action="DeleteFeedback" method="post" class="d-grid gap-2">
            <input type="hidden" name="id" value="@Model.FeedbackId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="FetchFeedback" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>