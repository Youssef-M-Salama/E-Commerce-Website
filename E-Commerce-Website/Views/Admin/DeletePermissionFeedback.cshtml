@model E_Commerce_Website.Models.Feedback

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">
        Are you sure you want to delete this Feedback?
    </h2>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <ul class="list-group">
            <li class="list-group-item"><strong>Feedback Id:</strong> @Model.FeedbackId</li>
            <li class="list-group-item"><strong>User Name:</strong> @Model.UserName</li>
            <li class="list-group-item"><strong>Message:</strong> @Model.UserMessage</li>
        </ul>

        <form asp-action="DeleteFeedback" asp-controller="Admin" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.FeedbackId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("FetchFeedback", "Admin")" class="btn btn-warning">Back to Feedback list</a>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
