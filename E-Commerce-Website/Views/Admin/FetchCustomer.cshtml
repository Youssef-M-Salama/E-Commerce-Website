@model List<Customer>
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">All Customer</h2>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Customer Phone</th>
                    <th>Customer Country</th>
                    <th>Customer City</th>
                    <th>Customer Address</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerName</td>
                        <td>@customer.CustomerPhone</td>
                        <td>@customer.CustomerCountry</td>
                        <td>@customer.CustomerCity</td>
                        <td>@customer.CustomerAddress</td>
                        <td>
                            <a href="@Url.Action("CustomerDetails","Admin",new {id=@customer.CustomerId})" class="btn btn-primary">Details</a>
                            <a href="@Url.Action("UpdateCustomer","Admin",new {id=@customer.CustomerId})" class="btn btn-warning">Update</a>
                            <a href="@Url.Action("DeletePermission", "Admin", new { id = @customer.CustomerId })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }   
            </tbody>
        </table>
    </div>
</div>