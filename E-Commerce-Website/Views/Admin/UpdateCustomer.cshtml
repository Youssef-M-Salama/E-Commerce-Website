@model Customer
@{
    ViewData["Title"] = "Edit Customer";
     Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase">Update Customer</h2>
</div>
<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" asp-action="UpdateCustomer" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CustomerId" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label">Name</label>
                        <input asp-for="CustomerName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerEmail" class="form-label">Email</label>
                        <input asp-for="CustomerEmail" type="email" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerPassword" class="form-label">Password (leave blank to keep)</label>
                        <input asp-for="CustomerPassword" type="password" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerGender" class="form-label">Gender</label>
                        <input asp-for="CustomerGender" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CustomerPhone" class="form-label">Phone</label>
                        <input asp-for="CustomerPhone" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerCountry" class="form-label">Country</label>
                        <input asp-for="CustomerCountry" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerCity" class="form-label">City</label>
                        <input asp-for="CustomerCity" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerAddress" class="form-label">Address</label>
                        <input asp-for="CustomerAddress" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Profile Image</label>
                @if (!string.IsNullOrEmpty(Model.CustomerImage))
                {
                    <img src="@Model.CustomerImage" 
                         alt="Profile" class="img-thumbnail mb-2"
                         style="height: 100px; object-fit: cover;" />
                }
                <input name="customerImage" type="file" class="form-control" accept="image/*" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Update Customer</button>
            <a asp-action="FetchCustomer" class="btn btn-outline-secondary mt-2 w-100">Cancel</a>
        </form>
    </div>
</div>