@model List<Product>
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">All Products</h2>
</div>
<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("AddProduct", "Admin")" class="my-3 btn btn-primary">Add</a>
        <table class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product?.ProductName</td> 
                        <td>@product?.ProductPrice</td>
                        <td><img src="@product.ProductImage" alt="Alternate Text" width="180px" height="50px" asp-append-version="true" /></td>
                        <td>
                            <a href="@Url.Action("ProductDetails", "Admin", new { id = product?.ProductId })" class="btn btn-primary">Details</a>
                            <a href="@Url.Action("UpdateProduct", "Admin", new { id = product?.ProductId })" class="btn btn-warning">Update</a>
                            <a href="@Url.Action("DeletePermissionProduct", "Admin", new { id = product?.ProductId })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>