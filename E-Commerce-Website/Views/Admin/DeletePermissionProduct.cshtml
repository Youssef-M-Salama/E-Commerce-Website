@model Product
@{
    ViewData["Title"] = "Delete Product?";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger">⚠️ Confirm Product Deletion</h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="text-center mb-3">
            @if (!string.IsNullOrEmpty(Model.ProductImage))
            {
                <img src="~/ProductImage/@Model.ProductImage"
                     alt="@Model.ProductName"
                     class="img-thumbnail"
                     style="max-height: 200px; object-fit: cover;" />
            }
        </div>

        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>ID:</strong> @Model.ProductId</li>
            <li class="list-group-item"><strong>Name:</strong> @Model.ProductName</li>
            <li class="list-group-item"><strong>Price:</strong> $@Model.ProductPrice.ToString("N2")</li>
            <li class="list-group-item"><strong>Category:</strong> @(Model.Category?.CategoryName ?? "—")</li>
        </ul>

        <form asp-action="DeleteProduct" method="post" class="d-grid gap-2">
            <input type="hidden" name="id" value="@Model.ProductId" />
            <button type="submit" class="btn btn-danger">✅ Delete Product</button>
            <a asp-action="FetchProduct" class="btn btn-outline-secondary">❌ Cancel</a>
        </form>
    </div>
</div>