@model Product
@{
    ViewData["Title"] = "Edit Product";
     Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase">Update Product</h2>
</div>
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProductId" />

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductPrice" class="form-label">Price</label>
                <input asp-for="ProductPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductDescription" class="form-label">Description</label>
                <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" class="form-select">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Current Image</label>
                @if (!string.IsNullOrEmpty(Model.ProductImage))
                {
                    <img src="@Model.ProductImage" 
                         alt="@Model.ProductName" class="img-thumbnail mb-2"
                         style="max-height: 150px;" />
                }
                <input name="productImage" type="file" class="form-control" accept="image/*" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Update Product</button>
            <a asp-action="FetchProduct" class="btn btn-outline-secondary mt-2 w-100">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}