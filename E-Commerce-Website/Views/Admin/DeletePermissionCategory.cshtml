@model Category
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">Are you sure you want to delete this Category</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <ul class="list-group">
            <li class="list-group-item">Category Id : @Model.CategoryName</li>
            <li class="list-group-item">Category Name : @Model.CategoryName</li>
        </ul>
        <form asp-action="DeleteCategory" asp-controller="Admin" method="post">
            <input type="hidden" name="id" value="@Model.CategoryId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>

        <a href="@Url.Action("FetchCategory", "Admin")" class="btn btn-warning">Back to category list</a>

    </div>
    <div class="col-md-2"></div>
</div>