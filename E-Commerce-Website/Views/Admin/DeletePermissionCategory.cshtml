@model Category
@{
    ViewData["Title"] = "Delete Category?";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger">⚠️ Confirm Category Deletion</h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 alert alert-warning">
        <h5 class="text-center">Are you sure you want to delete this category?</h5>
        <p class="text-center fst-italic">⚠️ This may affect associated products.</p>

        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>ID:</strong> @Model.CategoryId</li>
            <li class="list-group-item"><strong>Name:</strong> @Model.CategoryName</li>
        </ul>

        <form asp-action="DeleteCategory" method="post" class="d-grid gap-2">
            <input type="hidden" name="id" value="@Model.CategoryId" />
            <button type="submit" class="btn btn-danger">✅ Yes, Delete Category</button>
            <a asp-action="FetchCategory" class="btn btn-outline-secondary">❌ Cancel</a>
        </form>
    </div>
</div>