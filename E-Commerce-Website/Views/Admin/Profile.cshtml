@model Admin
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase">My Profile</h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Profile" asp-controller="admin" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="AdminId" />
            <input type="hidden" asp-for="AdminImage" />

            <div class="mb-3">
                <label asp-for="AdminName" class="form-label">Name</label>
                <input asp-for="AdminName" class="form-control" />
                <span asp-validation-for="AdminName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AdminEmail" class="form-label">Email</label>
                <input asp-for="AdminEmail" type="email" class="form-control" />
                <span asp-validation-for="AdminEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AdminPassword" class="form-label">Password (leave blank to keep)</label>
                <input asp-for="AdminPassword" type="password" class="form-control" />
                <span asp-validation-for="AdminPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Update Profile</button>
        </form>

        <hr />
        <h5>Profile Image</h5>
        <form asp-action="ChangeProfileImage" asp-controller="Admin" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @if (!string.IsNullOrEmpty(Model.AdminImage))
                {
                    <img src="@Model.AdminImage" 
                         alt="Profile" class="img-thumbnail mb-2"
                         style="max-height: 150px; width: auto;" />
                }
                else
                {
                    <img src="~/images/default-avatar.png" 
                         alt="Default Profile" class="img-thumbnail mb-2"
                         style="max-height: 150px; width: auto;" />
                }
            </div>
            <div class="mb-3">
                <label class="form-label">New Image</label>
                <input name="imageFile" type="file" class="form-control" accept="image/*" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Update Image</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}