@model Customer
@{
    ViewData["Title"] = "Delete Customer?";
}

<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger">⚠️ Confirm Deletion</h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 alert alert-warning">
        <h5 class="text-center">Are you sure you want to delete this customer?</h5>
        <p class="text-center fst-italic">This action cannot be undone.</p>

        <div class="text-center mb-3">
            @if (!string.IsNullOrEmpty(Model.CustomerImage))
            {
                <img src="~/CustomerImage/@Model.CustomerImage" 
                     alt="Profile" class="rounded-circle mb-2" 
                     style="width: 120px; height: 120px; object-fit: cover;" />
            }
        </div>

        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>@Model.CustomerName</strong></li>
            <li class="list-group-item">@Model.CustomerEmail</li>
            <li class="list-group-item">@Model.CustomerPhone</li>
        </ul>

        <form asp-action="DeleteCustomer" method="post" class="d-grid gap-2">
            <input type="hidden" name="id" value="@Model.CustomerId" />
            <button type="submit" class="btn btn-danger">✅ Yes, Delete Forever</button>
            <a asp-action="FetchCustomer" class="btn btn-outline-secondary">❌ Cancel</a>
        </form>
    </div>
</div>